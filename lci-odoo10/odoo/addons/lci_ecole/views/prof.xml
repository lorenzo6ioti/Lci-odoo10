<odoo>
<data>
    <record model="ir.ui.view" id="prof_form_view">
        <field name="name">prof.form (in lci_ecole)</field>
        <field name="model">ecole.prof</field>
        <field name="inherit_id" ref="ecole.prof_form_view"/>
        <field name="arch" type="xml">

           <xpath expr="//field[@name='section_id']" position="after">


              <group>
                <field name="nbHeureJour"/>
                <field name="salaireHoraire"/>
                <field name="salaire"/>
              </group>
           </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="prof_search_view">
        <field name="name">prof.search (in lci_ecole)</field>
        <field name="model">ecole.prof</field>
        <field name="inherit_id" ref="ecole.prof_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
            <field name="salaire"/>
          </field>
        </field>
    </record>



    <record model="ir.actions.act_window" id="prof_act_window">
        <field name="name">Prof</field>
        <field name="res_model">ecole.prof</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="prof_menu">
        <field name="name">Prof</field>
        <field name="parent_id" ref="ecole.main_ecole_menu"/>
        <field name="action" ref="prof_act_window"/>
        <field name="sequence" eval="16"/> <!-- TODO -->
    </record>
</data>
</odoo>
